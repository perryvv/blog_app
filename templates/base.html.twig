<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <div class="w-100 p-3">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{path('app_logout')}}"><button class="btn btn-danger float-end">Uitloggen</button></a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{path('admin_panel')}}"><button class="btn btn-primary float-end">Admin Panel</button></a>
        {% endif %}
        {% else %}
            <a href="{{path('app_register')}}"><button class="btn btn-warning float-end">Register</button></a>
            <a href="{{path('app_login')}}"><button class="btn btn-success float-end">Login</button></a>
        {% endif %}
        {% block body %}
        {% endblock %}
        </div>
    </body>
</html>
