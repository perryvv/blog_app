{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titel</th>
                <td>{{ post.titel }}</td>
            </tr>
            <tr>
                <th>Subtitel</th>
                <td>{{ post.subtitel }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content|purify }}</td>
            </tr>
            <tr>
                <th>Publishdate</th>
                <td>{{ post.publishdate ? post.publishdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Img_url</th>
                <td>{{ post.imgUrl }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_index') }}"><button class="btn btn-primary">back to list</button></a>

    <a href="{{ path('admin_edit', {'id': post.id}) }}"><button class="btn btn-warning">Aanpassen</button></a>

    {{ include('admin/_delete_form.html.twig') }}
{% endblock %}
