{% extends 'base.html.twig' %}

{% block title %}{{post.titel}}{% endblock %}

{% block body %}

    <div id="test">
    <h1>{{ post.titel }}</h1>
        
    <p>{{ post.subtitel }}</p>
    <p>{{ post.publishdate ? post.publishdate|date('Y-m-d') : '' }}</p>
    {% if post.imgUrl is not empty %}
    <td><img src="{{asset('uploads/images/' ~ post.imgUrl)}}"></td>
    {%endif%}
    {{ post.content|purify }}
    <a href="{{ path('post_index') }}">Terug naar blog</a>
    </div>
{% endblock %}
