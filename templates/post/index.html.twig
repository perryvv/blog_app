{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <div>
    <a href="{{path('admin_panel')}}">Admin Panel</a>
        {% for post in posts %}

                <h2><a href="{{ path('post_show', {'id': post.id}) }}">{{ post.titel }}</a></h2>
                <h3>{{ post.subtitel }}</h3>
                <p>{{ post.content }}</p>
                <p>{{ post.publishdate ? post.publishdate|date('Y-m-d') : '' }}</p>
                <p>{{ post.imgUrl }}</p>
                <p>
                    <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </p>
                <hr>
        {% else %}
                <p>no records found</p>
        {% endfor %}

    <a href="{{ path('post_new') }}">Create new</a>
{% endblock %}
